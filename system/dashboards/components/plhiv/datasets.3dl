                filterFrom="gender"
            />

            <SQLData name="tile_need_vl_data" queryName="plhiv/tile/need_vl" filterFrom="gender" />

            <SQLData name="need_vl_client_details_data" detailsViewData="need_vl_clients_data" detailsViewColumn="Patient ID" transpose="true">
                SELECT * FROM derived.dim_client WHERE ctc_id = '[[Patient ID]]'
            </SQLData>

        {/* Unsuppressed Clients no EAC */}

            <SQLData
                name="unsuppressed_clients_data"
