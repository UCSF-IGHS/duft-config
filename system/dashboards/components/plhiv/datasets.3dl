                pageSize="15"
                searchColumns="[Patient ID], [Current Age], [Sex], [Last VL Result Numeric]"
                filterFrom="gender"
            />

            <SQLData name="tile_unsuppressed_data" queryName="plhiv/tile/unsuppressed" filterFrom="gender" />

            <SQLData name="unsuppressed_client_details_data" detailsViewData="unsuppressed_clients_data" detailsViewColumn="Patient ID" transpose="true">
                SELECT * FROM derived.dim_client WHERE ctc_id = '[[Patient ID]]'
            </SQLData>

        {/* Clients with Missed Appointments */}

            <SQLData
                name="missed_appointment_clients_data"
